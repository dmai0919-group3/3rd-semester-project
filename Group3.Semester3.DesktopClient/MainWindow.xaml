<Window x:Class="Group3.Semester3.DesktopClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Group3.Semester3.DesktopClient"
        mc:Ignorable="d"
        Title="OGO Filesharing [DEBUG]" Height="450" Width="800"
        WindowState="Maximized" WindowStyle="SingleBorderWindow">
    <StackPanel Margin="25 0">
        <Label Content="Debug Dashboard" Foreground="Gray" FontSize="24" HorizontalAlignment="left"/>
        <Label Name="userName" Content="Welcome " Foreground="Gray" FontSize="16" HorizontalAlignment="left"/>
        <Label Name="userEmail" Content="Email address: " Foreground="Gray" FontSize="12" HorizontalAlignment="left"/>
        <Label Name="userId" Content="User ID: " Foreground="Gray" FontSize="12" HorizontalAlignment="left"/>
        <Button Name="btnLogout" Click="btnLogout_Click" Content="Logout" Background="LightGray" Foreground="Black" FontSize="14" HorizontalAlignment="Left" Margin="0 25"></Button>
    </StackPanel>
</Window>
