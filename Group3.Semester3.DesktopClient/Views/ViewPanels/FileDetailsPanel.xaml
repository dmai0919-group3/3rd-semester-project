<UserControl x:Class="Group3.Semester3.DesktopClient.Views.ViewPanels.FileDetailsPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Group3.Semester3.DesktopClient.Views.ViewPanels"
        mc:Ignorable="d"
        Height="450" Width="230"
        HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="32"/>
            <RowDefinition Height="26"/>
            <RowDefinition Height="75*"/>
            <RowDefinition Height="120"/>
            <RowDefinition Height="53*"/>
        </Grid.RowDefinitions>
        <Label Content="File Name" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18" Height="32" Width="230" Foreground="#DD2C2C2C" Style="{DynamicResource MaterialDesignLabel}" x:Name="labelFileName"/>
        <Grid Grid.Row="3" x:Name="panelDiscussionPanel" Background="#FF535353" Margin="0,120,0,0" Grid.RowSpan="2"/>
        <Label Content="Details" HorizontalAlignment="Left" VerticalAlignment="Top" Height="26" Width="97" Foreground="#FF4B4B4B" FontSize="14" Style="{DynamicResource MaterialDesignLabel}" Margin="2,27,0,0" Grid.RowSpan="2"/>
        <Canvas Grid.Row="2"/>

    </Grid>
</UserControl>
