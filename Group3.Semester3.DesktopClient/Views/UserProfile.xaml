<UserControl x:Class="Group3.Semester3.DesktopClient.Views.UserProfile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Group3.Semester3.DesktopClient.Views"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <StackPanel Margin="25 0">
            <Label Content="Debug Dashboard" Foreground="Gray" FontSize="24" HorizontalAlignment="left"/>
            <Label Name="userName" Content="Welcome " Foreground="Gray" FontSize="16" HorizontalAlignment="left"/>
            <Label Name="userEmail" Content="Email address: " Foreground="Gray" FontSize="12" HorizontalAlignment="left"/>
            <Label Name="userId" Content="User ID: " Foreground="Gray" FontSize="12" HorizontalAlignment="left"/>
        </StackPanel>
    </Grid>
</UserControl>
